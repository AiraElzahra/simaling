<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@drawable/arf_text_lis_berita">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/photo_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@color/colorAccent"
                    app:civ_border_width="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"/>

                <LinearLayout
                    android:layout_below="@id/photo_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Biodata Profil"
                        android:textColor="@color/colorBlack"
                        android:textSize="24dp" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Nama"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        app:fontFamily="@font/roboto_slab_thin" />

                    <TextView
                        android:id="@+id/nama_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arif Purnama"
                        android:textColor="@color/colorBlack"
                        android:textSize="20dp"
                        app:fontFamily="@font/roboto_slab" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NIK"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/roboto_slab_thin"/>

                    <TextView
                        android:id="@+id/nik_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2232221234432231"
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/roboto_slab"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/roboto_slab_thin"/>

                    <TextView
                        android:id="@+id/alamat_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/test_profile"
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/roboto_slab"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RT"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/roboto_slab_thin"/>

                    <TextView
                        android:id="@+id/rt_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="23"
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/roboto_slab"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RW"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/roboto_slab_thin"/>

                    <TextView
                        android:id="@+id/rw_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/roboto_slab"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kelurahan"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/roboto_slab_thin"/>

                    <TextView
                        android:id="@+id/kelurahan_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sukakarya"
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/roboto_slab"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kota/Kab"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/roboto_slab_thin"/>

                    <TextView
                        android:id="@+id/kota_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sukabumi"
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/roboto_slab"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kewarganegaraan"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/roboto_slab_thin"/>

                    <TextView
                        android:id="@+id/kewarganegaraan_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Indonesia"
                        android:textSize="20dp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/roboto_slab"/>

                </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>