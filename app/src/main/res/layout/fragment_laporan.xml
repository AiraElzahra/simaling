<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaporanFragment"
    android:background="@android:color/white">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FORM WAJIB LAPOR"
                    android:textSize="24dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlack"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:background="@drawable/arf_text_mod"
                    android:layout_marginTop="19dp"
                    android:textColor="@color/blue_grey_500"
                    android:textColorHint="@color/blue_grey_500"
                    android:drawableLeft="@drawable/ic_credit_card_black_24dp"
                    android:drawablePadding="13dp"
                    android:padding="16dp"
                    android:hint="NO. KTP"
                    android:layout_below="@id/label1"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/nik"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/blue_grey_500"
                    android:textColor="@color/blue_grey_500"
                    android:textAllCaps="true"
                    android:background="@drawable/arf_text_mod"
                    android:layout_marginTop="19dp"
                    android:drawableLeft="@drawable/ic_face_black_24dp"
                    android:drawablePadding="13dp"
                    android:padding="16dp"
                    android:hint="NAMA LENGKAP"
                    android:inputType="textPersonName"
                    android:layout_below="@id/username"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/nama"/>



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/blue_grey_500"
                    android:textColor="@color/blue_grey_500"
                    android:textAllCaps="true"
                    android:background="@drawable/arf_text_mod"
                    android:layout_marginTop="19dp"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:drawablePadding="13dp"
                    android:padding="16dp"
                    android:hint="TANGGAL KEMBALI "
                    android:inputType="textPersonName"
                    android:layout_below="@id/username"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tgl"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jenis"
                    android:padding="10dp"

                    android:background="@drawable/arf_text_mod"
                    android:textColor="@color/blue_grey_500"
                    android:layout_marginTop="19dp" />



                <EditText
                    android:id ="@+id/pesan"
                    android:layout_width ="match_parent"
                    android:layout_height ="100dp"
                    android:layout_weight ="1"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines ="4"
                    android:maxLength ="2000"
                    android:hint ="Pesan untuk pengurus ke RTan"
                    android:scrollHorizontally="false"
                    android:layout_marginBottom="16dp"/>
                <Button
                    android:id="@+id/btn_lapor"
                    android:layout_below="@+id/lapor_laporan"
                    android:background="@drawable/arf_btn_mod"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Simpan"
                    android:textSize="18dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</FrameLayout>